<!-- Hero -->
<div class="bg-image overflow-hidden" style="background-image: url('/home.svg');">
    <div class="bg-primary-dark-op">
        <div class="content content-narrow content-full">
            <div
                class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center mt-5 mb-2 text-center text-sm-left">
                <div class="flex-sm-fill">
                    <h1 class="font-w600 text-white mb-0 invisible" data-toggle="appear">Menu Parceiros</h1>
                    <h2 class="h4 font-w400 text-white-75 mb-0 invisible" data-toggle="appear" data-timeout="250">Nossos
                        parceiros</h2>
                </div>
                <div class="flex-sm-00-auto mt-3 mt-sm-0 ml-sm-3">
                    <span class="d-inline-block invisible" data-toggle="appear" data-timeout="350">
                        <%= link_to new_partner_url, class: "btn btn-sm btn-p3 px-4 py-2" do  %>
                        <i class="fa fa-plus mr-1"></i> Novo parceiro
                        <% end %>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END Hero -->

<!-- Page Content -->
<div class="content content-narrow">
    <!-- Stats -->
    <div class="row">

        <div class="col-6 col-md-3 col-lg-6 col-xl-3">
            <a class="block block-rounded block-link-pop border-left border-primary border-4x"
                href="javascript:void(0)">
                <div class="block-content block-content-full bg-p3">
                    <div class="font-size-sm font-w600 text-uppercase text-white text-muted">Parceiros ativos</div>
                    <div class="font-size-h2 font-w400 text-white"><%= @partners.where(status: true).size %></div>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-3 col-lg-6 col-xl-3">
            <a class="block block-rounded block-link-pop border-left border-primary border-4x"
                href="javascript:void(0)">
                <div class="block-content block-content-full bg-danger-p3">
                    <div class="font-size-sm font-w600 text-uppercase text-muted text-white">Parceiros inativos</div>
                    <div class="font-size-h2 font-w400 text-white"><%= @partners.where(status: false).size %></div>
                </div>
            </a>
        </div>
    </div>
    <!-- END Stats -->
</div>

<div class="content">
    <!-- Full Table -->
    <div class="block">
        <div class="block-header">
            <div class="block-options">
                <button type="button" class="btn-block-option">
                    <i class="si si-settings"></i>
                </button>
            </div>
        </div>
        <div class="block-content">

            <div class="table-responsive">
                <table class="table table-bordered table-striped table-vcenter">
                    <thead>
                        <tr>
                            <th class="text-center">#</th>
                            <th>Nome</th>
                            <th class="text-center">Estado</th>
                            <th class="text-center">Ação</th>
                        </tr>
                    </thead>
                    <tbody>

                        <% @partners.each do |partner| %>

                        <tr>
                            <td class="text-center">
                                <i class="fas fa-hands-helping fa-4" style="font-size: 40px; color: #64c6c5;"></i>
                            </td>
                            <td class="font-w600 font-size-sm text-truncate">
                                <a href="<%= partner_url(partner) %>"><%= partner.name %></a>
                            </td>
                            <td class="text-center">
                                <% if partner.status %>
                                    <span class="badge badge-success">Activo</span>
                                <% else %>
                                    <span class="badge badge-danger">Inativo</span>
                                <% end %>
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <%= link_to partner_path(partner), class: "btn btn-sm btn-p3 js-tooltip-enabled", "data-toggle": "tooltip", "title": "Ver detalhes", "data-original-title": "Ver detalhes" do %>
                                        <i class="fa fa-fw fa-eye"></i>
                                    <% end %>
                                </div>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <%== pagy_bootstrap_nav(@pagy).html_safe %>
                <br>
            </div>
        </div>
    </div>
    <!-- END Full Table -->

</div>