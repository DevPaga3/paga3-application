<div id="page-container">

    <!-- Main Container -->
    <main id="main-container">

        <!-- Page Content -->
        <div class="bg-image" style="background-image: url('/templete/assets/media/photos/photo6@2x.jpg');">
            <div class="hero-static bg-white-95">
                <div class="content">
                    <br>
                    <br>

                    <div class="row justify-content-center">
                        <div class="col-md-8 col-lg-6 col-xl-4">
                            <!-- Sign In Block -->
                            <div class="block block-themed block-fx-shadow mb-0">
                                <div class="block-header bg-p3">
                                    <h3 class="block-title">Nova senha</h3>
                                    <div class="block-options">
                                        <%= link_to "iniciar sessão?", "/users/sign_in", class: "btn-block-option font-size-sm" %>

                                        <a class="btn-block-option" href="/users/sign_up" data-toggle="tooltip" data-placement="left" title="Nova conta">
                                            <i class="fa fa-user-plus"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="block-content">
                                    <div class="p-sm-3 px-lg-4 py-lg-5">
                                        <h1 class="mb-2">Paga3</h1>
                                        <p>Bem vindo, iniciar sessão.</p>

                                        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                                            <%= f.error_notification %>

                                            <% if f.object.errors.any? %>
                                                <div id="error_explanation">
                                                    <div class="alert alert-error">
                                                        The form contains <%= pluralize(f.object.errors.count, "error") %>.
                                                    </div>
                                                        <ul>
                                                        <% f.object.errors.full_messages.each do |msg| %>
                                                            <li>* <%= msg %></li>
                                                        <% end %>
                                                    </ul>
                                                </div>
                                            <% end %>

                                            <%= f.input :reset_password_token, as: :hidden %>
                                            <%= f.full_error :reset_password_token %>

                                            <div class="py-3">
                                                <div class="form-group">
                                                    <%= f.input :password, 
                                                                required: true, 
                                                                input_html: { autocomplete: "current-password", class: "form-control-alt form-control-lg" },
                                                                autofocus: true,
                                                                label: "Nova senha"
                                                            %>
                                                </div>

                                                <div class="form-group">
                                                    <%= f.input :password_confirmation, required: false, input_html: { autocomplete: "current-password", class: "form-control-alt form-control-lg" }, label: "Confirmar Nova senha" %>
                                                </div>

                                            </div>
                                            <div class="form-group row justify-content-md-center">
                                                <div class="col-md-8">
                                                    <button type="submit" class="btn btn-block btn-p3">
                                                        <i class="fa fa-fw fa-sign-in-alt mr-1"></i> Alaterar agora
                                                    </button>
                                                </div>
                                            </div>
                                        <% end %>

                                        <!-- END Sign In Form -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content content-full font-size-sm text-muted text-center">
                    <strong>Paga3 1.0.0</strong> &copy; <span data-toggle="year-copy"></span>
                </div>
            </div>
        </div>

    </main>
</div>
