<!-- Hero -->
<div class="bg-image overflow-hidden" style="background-image: url('/home.svg');">
    <div class="bg-primary-dark-op">
        <div class="content content-narrow content-full">
            <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center mt-5 mb-2 text-center text-sm-left">
                <div class="flex-sm-fill">
                    <%= link_to purchases_path, class: "link-fx font-size-h3 text-white", "data-toggle": "tooltip", title: "", "data-original-title": "Todas as vendas" do %>
                        <i class="fa fa-fw fa-eye"></i> Minhas compras
                    <% end %>
                </div>
                <div class="flex-sm-00-auto mt-3 mt-sm-0 ml-sm-3">
                    <span class="d-inline-block invisible" data-toggle="appear" data-timeout="350">

                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END Hero -->


<!-- Page Content -->
<div class="content content-boxed">
    <div class="row">
        <div class="col-md-9">
            <!-- Invoice -->
            <div class="block">
                <div class="block-header">
                    <h3 class="block-title"><%= @factura.reference %></h3>
                    
                </div>

                <div class="block-content">
                    <div class="">
                        <!-- <iframe src="<%# adc_details_url(@factura.adc, format: "pdf")%>" width="100%" height="500px" class=""></iframe> -->
                    </div>
                </div>
            </div>
            <!-- END Invoice -->        
        </div>


        <div class="col-md-3">
            <!-- Invoice -->
            <div class="block">
                <div class="block-header">
                    <h3 class="block-title">Recibos</h3>
                    <hr>
                </div>
                <div class="block-content">

                    <% @factura.receipts.each do |recibo| %>
                        <%= link_to recibo_path(recibo, format: "pdf"), class: "js-swal-success btn btn-light push", target: "_blank" do %>
                            <i class="si si-doc fa-2x text-success mr-1"></i> 
                            <span class="mb-1">Recibo de - <%= recibo.created_at.strftime("%d/%m/%Y")%></span>
                        <% end %>       
                    <% end %>       

                </div>
            </div>
            <!-- END Invoice -->  
        </div>

    </div>

</div>
<!-- END Page Content -->