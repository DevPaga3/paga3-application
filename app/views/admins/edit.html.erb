<!-- Hero -->
<div class="bg-image" style="background-image: url('/home.svg');">
    <div class="bg-black-50">
        <div class="content content-full text-center">
            <div class="my-3">
                <% if @admin.avatar.attached? %>
                    <%= image_tag(@admin.avatar, class: "img-avatar img-avatar-thumb") %>
                <% else %>
                    <img class="img-avatar img-avatar-thumb" src="/templete/assets/media/avatars/avatar13.jpg" alt="">
                <% end %>
            </div>
            <h1 class="h2 text-white mb-0"><%= @admin.name %></h1>
            <span class="text-white-75"><%= @admin.cell_phone %></span>
        </div>
    </div>
</div>
<!-- END Hero -->





<%= simple_form_for(@admin) do |f| %>

    <div class="content content-boxed">
        <div class="row">
            <div class="col-md-12">
                <!-- Updates -->
                <ul class="timeline timeline-alt py-0">
                    <li class="timeline-event">
                        <div class="timeline-event-icon bg-p3">
                            <i class="fa fa-edit"></i>
                        </div>
                        <div class="timeline-event-block block invisible" data-toggle="appear">
                            <div class="block-header">
                                <h3 class="block-title">Actualizar info. do utilizador</h3>
                            </div>
                            
                            <%= f.error_notification %>
                            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

                            <div class="block-content">
                                <div class="row">

                                    <div class="col-md-6">
                                        <%= f.input :name, label: 'Nome completo' %>
                                        <% if current_user.admin? %>
                                            <%= f.input :role, :as => :select, :collection => User.roles.map { |key, value| [t(key), value] }, label: 'Tipo de acesso' %>
                                        <% end %>
                                    </div>

                                    <div class="col-md-6">
                                        <%= f.input :email, label: 'E-mail' %>
                                        <%= f.input :cell_phone, label: 'NÂº telefone' %>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </li>
                </ul>

                <div class="form-actions text-left ml-5">
                    <%= f.button :submit, "Registar", class: "btn btn-p3 btn-sm mr-2" %>
                    <%= link_to 'Cancelar', admin_path(@admin.id), class: 'btn btn-sm btn-danger' %>
                </div>
                <!-- END Updates -->
            </div>
        </div>
    </div>

<% end %>











