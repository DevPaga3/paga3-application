
<%= simple_form_for(@publicity) do |f| %>
    <div class="content content-boxed">
        <div class="row">
            <div class="col-md-12">
                <!-- Updadtes -->
                <ul class="timeline timeline-alt py-0">
                    <li class="timeline-event">
                        <div class="timeline-event-icon bg-p3">
                            <i class="fa fa-edit"></i>
                        </div>
                        <div class="timeline-event-block block invisible" data-toggle="appear">
                            <div class="block-header">
                                <h3 class="block-title">Atualizar dados da publicidade</h3>
                            </div>

                            <%= f.error_notification %>
                            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

                            <div class="block-content">
                                <div class="row">
                                    <div class="col-md-6">
                                        <%= f.input :description, label: "Descrição da publicidade" %>
                                        <br>
                                        <%= f.input :avatar, label: "Imagem da publicidade" %>
                                    </div>
                                    <div class="col-md-6">
                                        <%= f.input :start_date %>
                                        <%= f.input :end_date %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>

                <div class="form-actions text-right">
                    <%= f.button :submit, "Atualizar", class: "btn btn-p3 btn-sm mr-2" %>
                </div>
                <!-- End Updadtes -->
            </div>
        </div>
    </div>

<% end %>