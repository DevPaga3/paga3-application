<!-- Hero -->
<div class="bg-image overflow-hidden" style="background-image: url('/home.svg');">
    <div class="bg-primary-dark-op">
        <div class="content content-narrow content-full">
            <div
                class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center mt-5 mb-2 text-center text-sm-left">
                <div class="flex-sm-fill">
                    <h1 class="font-w600 text-white mb-0 invisible" data-toggle="appear">Publicidades</h1>
                    <h2 class="h4 font-w400 text-white-75 mb-0 invisible" data-toggle="appear" data-timeout="250">Lista
                        de publicidades</h2>
                </div>
                <div class="flex-sm-00-auto mt-3 mt-sm-0 ml-sm-3">
                    <span class="d-inline-block invisible" data-toggle="appear" data-timeout="350">
                        <%= link_to new_publicity_path, class: "btn btn-sm btn-p3 px-4 py-2" do  %>
                        <i class="fa fa-plus mr-1"></i> Nova publicidade
                        <% end %>
                    </span>
                </div>
            </div>
        </div>
    </div>
  </div>
  <!-- END Hero -->
  
  <div class="content">
    <!-- Full Table -->
    <div class="block">
        <div class="block-header">
            <div class="block-options">
                <button type="button" class="btn-block-option">
                    <i class="si si-settings"></i>
                </button>
            </div>
        </div>
  
        <div class="block-content">
            <div class="table-responsive">
  
                <table class="table table-bordered table-striped table-center">
                    <thead>
                        <tr>
                            <th>Descrição</th>
                            <th>Data Início</th>
                            <th>Data Final</th>
                            <th class="text-center">Estado</th>
                            <th class="text-center">Acção</th>
                        </tr>
                    </thead>
  
                    <tbody>
                        <% @publicities.each do |publicity| %>
                        <tr>
                            <td><%= publicity.description %></td>
                            <td><%= publicity.start_date %></td>
                            <td><%= publicity.end_date %></td>
                            <td class="text-center">
                                <% if publicity.status %>
                                    <span class="badge badge-success">Activo</span>
                                <% else %>
                                    <span class="badge badge-danger">Inativo</span>
                                <% end %>
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <% if current_user.admin? && false %>
                                        <%= link_to publicity, class: "btn btn-sm btn-danger js-tooltip-enabled", "data-toggle": "tooltip", "title": "Eliminar", "data-original-title": "Eliminar",
                                            method: :delete, data: { confirm: 'Tens a certeza?' } do %>
                                            <i class="fa fa-fw fa-trash"></i>
                                        <% end %>
                                    <% end %>
  
                                    <%= link_to publicity_path(publicity), class: "btn btn-sm btn-p3 js-tooltip-enabled", "data-toggle": "tooltip", "title": "Ver detalhes", "data-original-title": "Ver detalhes" do %>
                                        <i class="fa fa-fw fa-eye"></i>
                                    <% end %>
                                </div>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <%== pagy_bootstrap_nav(@pagy).html_safe %>
                <br>
            </div>
        </div>
    </div>
    <!-- End Full Table -->
  </div>