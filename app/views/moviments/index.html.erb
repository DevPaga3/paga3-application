<p id="notice"><%= notice %></p>

<h1>Moviments</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>User</th>
      <th>Is credit</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moviments.each do |moviment| %>
      <tr>
        <td><%= moviment.profile_id %></td>
        <td><%= moviment.user_id %></td>
        <td><%= moviment.is_credit %></td>
        <td><%= moviment.amount %></td>
        <td><%= link_to 'Show', moviment %></td>
        <td><%= link_to 'Edit', edit_moviment_path(moviment) %></td>
        <td><%= link_to 'Destroy', moviment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

